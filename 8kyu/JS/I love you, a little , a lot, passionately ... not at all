function howMuchILoveYou(nbPetals) {
  console.log(nbPetals);  
  if(nbPetals%6 == 0){
      return "not at all";
    }else if(nbPetals%6 == 5){
      return "madly";
    }else if(nbPetals%6 == 4){
      return "passionately";
    }else if(nbPetals%6 == 3){
      return "a lot";
    }else if(nbPetals%6 == 2){
      return "a little";
    }else{
      return "I love you";
    }
}
